<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="mCareBridge"
        android:id="@+id/mcarelogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textSize="40dp"
        android:textColor="#ffffedd9"
        android:typeface="normal"
        android:background="#3b5998"
        android:padding="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Close  "
        android:clickable="false"
        android:textColor="#ffffffff"
        android:id="@+id/closeBtn"
        android:background="@drawable/closebtn"
        android:onClick="onQuit"
        android:layout_alignBaseline="@+id/synchbtn"
        android:layout_alignBottom="@+id/synchbtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="103dp"
        android:layout_marginEnd="103dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synching Rx..."
        android:id="@+id/synchbtn"
        android:onClick="onSynch"
        android:background="@drawable/synchbtndisabled"
        android:clickable="false"
        android:textColor="#ffffffff"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/msgwindow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="115dp"
        android:layout_marginStart="115dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome to mCareBridge"
        android:id="@+id/msgwindow"
        android:textColor="#ff2084a3"
        android:padding="5dp"
        android:layout_below="@+id/mcarelogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>